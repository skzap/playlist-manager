div(ng-controller='PlayerCtrl')
  div(ng-show='playlist != null')#player
    iframe(ng-show='getCurrentSong().type == \'youtube\'', src='http://www.youtube.com/embed/?enablejsapi=1&controls=0&showinfo=0&iv_load_policy=3&rel=3')#ytplayer
    iframe(ng-show='getCurrentSong().type == \'soundcloud\'')#scplayer
    //img#cover
    button(ng-click='prev()') Prev
    button(ng-click='isPaused = !isPaused') {{btnPlayText}}
    button(ng-click='next()') Next
    input(type='range', min='0', max='100', ng-model="volume")
    select(ng-model='mode')
      option repeat
      option repeatone
    div
      input(type='range', min='0', max='{{maxTime}}', ng-model="currentTime")
    div {{currentSongName}}
    div {{displayTime}}
    div {{playlist.title}} {{1+currentSong.mod(playlist.songs.length)}}/{{playlist.songs.length}}
    input(type='range', min='0', max='1080', ng-model="videoWidth")
