section
  button(ng-click='playlist.playPlaylist(0)') Play {{playlist.title}}
  div
    div(ng-switch='playlist.songs.length')
      div(ng-switch-when='0') 0 songs
      div(ng-switch-when='1') 1 song
      div(ng-switch-default) {{playlist.songs.length}} songs 
  ul
    li(ng-repeat='song in playlist.songs', ui-draggable='true', drag="song", ui-on-Drop='onDrop($event,$data,$index)')
      button(ng-click='playlist.playPlaylist($index)') Play
      {{song.type}} {{song.name}} 
      button(ng-click='playlist.moveDownSong($index-1)') Up
      button(ng-click='playlist.moveDownSong($index)') Dwn
      button(ng-click='playlist.deleteSong($index)') x
  div Add song
    ul
      li
        a(href="/pl/{{playlist.pid}}/add") Add Song from URL
