extends playlistLayout

block songControls
  button(ng-click='playlist.moveDownSong($index-1)', class='btn btn-default btn-xs') 
    i(class='fa fa-chevron-up')
  button(ng-click='playlist.moveDownSong($index)', class='btn btn-default btn-xs')
    i(class='fa fa-chevron-down')
  button(ng-click='playlist.deleteSong($index)', class='btn btn-danger btn-xs')
    i(class='fa fa-remove')
block playlistControls
  a(href="/pl/{{playlist.pid}}/add", class='btn btn-success') Add Song from URL
  button(ng-show='renaming != 1', ng-click='playlist.renaming()', class='btn btn-warning') Rename playlist
  input(type='text', ng-show='renaming == 1', ng-model='inputRename')
  button(ng-click='playlist.delete()', class='btn btn-danger') Delete playlist
      
